<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:ed_gallery/Resources/Private/Language/locallang_db.xml:flexform.general_settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
                    <switchableControllerActions>
                        <TCEforms>
                            <label>LLL:EXT:ed_gallery/Resources/Private/Language/locallang_db.xml:flexform.switchableControllerActions</label>
                            <config>
                                <type>select</type>
                                <itemsProcFunc>Tx_EdGallery_Domain_Repository_TemplateRepository->findAllSCA</itemsProcFunc>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <multiple>0</multiple>
                                <size>1</size>
                                <onChange>reload</onChange>
                                <selicon_cols>3</selicon_cols>
                                <suppress_icons>ONLY_SELECTED</suppress_icons>
                                <disableNoMatchingValueElement>1</disableNoMatchingValueElement>
                                <multiple>0</multiple>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>
                    <settings.template>
						<TCEforms>
							<label>LLL:EXT:ed_gallery/Resources/Private/Language/locallang_db.xml:flexform.template</label>
							<config>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                </items>
                                <type>select</type>
								<itemsProcFunc>Tx_EdGallery_Domain_Repository_TemplateRepository->findAllPluginTemplates</itemsProcFunc>
							    <maxitems>1</maxitems>
							    <size>1</size>
                                <onChange>reload</onChange>
                                <selicon_cols>3</selicon_cols>
							    <suppress_icons>ONLY_SELECTED</suppress_icons>
                                <disableNoMatchingValueElement>1</disableNoMatchingValueElement>
							    <multiple>0</multiple>
							</config>
						</TCEforms>
					</settings.template>
                    <settings.rootCategory>
                        <TCEforms>
                            <displayCond>FIELD:switchableControllerActions:=:DamCategory->show</displayCond>
                            <label>LLL:EXT:ed_gallery/Resources/Private/Language/locallang_db.xml:flexform.rootCategory</label>
                            <config>
                                <type>select</type>
                                <form_type>user</form_type>
                                <userFunc><![CDATA[EXT:dam/lib/class.tx_dam_tcefunc.php:&tx_dam_tceFunc->getSingleField_selectTree]]></userFunc>
                                <treeViewClass><![CDATA[EXT:dam/components/class.tx_dam_selectionCategory.php:&tx_dam_selectionCategory]]></treeViewClass>
                                <treeViewBrowseable type="integer">0</treeViewBrowseable>
                                <foreign_table>tx_dam_cat</foreign_table>
                                <autoSizeMax>20</autoSizeMax>
                                <size type="integer">10</size>
                                <minitems type="integer">0</minitems>
                                <maxitems type="integer">1</maxitems>
                                <default></default>
                            </config>
                        </TCEforms>
                    </settings.rootCategory>
                    <settings.medias>
                        <TCEforms>
                            <displayCond>FIELD:switchableControllerActions:=:Dam->list</displayCond>
                            <label>LLL:EXT:ed_gallery/Resources/Private/Language/locallang_db.xml:flexform.medias</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>tx_dam</allowed>
                                <size>10</size>
                                <maxitems>9999</maxitems>
                                <minitems>0</minitems>
                                <softref>media</softref>
                                <default></default>
                            </config>
                        </TCEforms>
                    </settings.medias>
                    <settings.media>
                        <TCEforms>
                            <displayCond>FIELD:switchableControllerActions:=:Dam->show</displayCond>
                            <label>LLL:EXT:ed_gallery/Resources/Private/Language/locallang_db.xml:flexform.media</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>tx_dam</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <softref>media</softref>
                                <default></default>
                            </config>
                        </TCEforms>
                    </settings.media>
					<settings.itemsPerPage>
						<TCEforms>
							<label>LLL:EXT:ed_gallery/Resources/Private/Language/locallang_db.xml:flexform.itemsPerPage</label>
							<config>
								<type>input</type>
								<size>2</size>
								<eval>int,required</eval>
								<default>12</default>
							</config>
						</TCEforms>
					</settings.itemsPerPage>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>